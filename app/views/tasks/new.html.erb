<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :completed %><br>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit "Create Task" %>
  </div>
<% end %>

<%= link_to "Back to tasks", tasks_path %>
