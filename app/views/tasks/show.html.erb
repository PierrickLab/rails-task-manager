<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_task_path(@task) %>

<p><strong>Details:</strong> <%= @task.details %></p>

<p><strong>Status:</strong> <%= @task.completed ? "✅ Completed" : "❌ Not completed" %></p>

<%= link_to 'Delete', 'tasks/', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>

<%= link_to "Back to all tasks", "/tasks" %>
